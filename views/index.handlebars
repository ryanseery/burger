<container>
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Devour Burgers</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
    <h2>Burgers we offer:</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class= "border1">
              {{this.burger_name}}
              <form action= "burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class= "btn-primary" type="submit">Would you like to devour?</button>
              </form>
            </li>
            <br>
          {{unless}}
          {{each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>These are the bugers you have devoured:</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
              {{this.id}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h2>Create a Burger</h2>
      <form class="create-update-form" action="/burger/create" method="POST">
        <div class="form-group">
          <label for="ca">Enter your Burger:</label>
          <input type="text" id="burger_name" name="name">
        </div>
        <button class="btn-danger" type="submit">ADD</button>
      </form>
    </div>
  </div>
</container>